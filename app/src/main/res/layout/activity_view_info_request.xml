<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="370dp"
                    android:layout_height="74dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/namefood"
                    android:layout_width="272dp"
                    android:layout_height="43dp"
                    android:layout_alignBottom="@+id/image1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="9dp"
                    android:gravity="center"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image1"
                    app:layout_constraintStart_toStartOf="@+id/image1"
                    app:layout_constraintTop_toTopOf="@+id/image1"
                    app:layout_constraintVertical_bias="0.021"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="149dp"
                    android:layout_height="118dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/search2"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="155dp"
                    android:layout_height="116dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/spoon" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="259dp"
                android:layout_height="157dp"
                android:layout_below="@+id/reject"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/image1"
                app:layout_constraintHorizontal_bias="0.502"
                app:srcCompat="@drawable/soaarah_icon" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="370dp"
                    android:layout_height="74dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account" />


                <TextView
                    android:id="@+id/calories"
                    android:layout_width="313dp"
                    android:layout_height="41dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image3"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="@+id/image3"
                    app:layout_constraintTop_toTopOf="@+id/image3"
                    app:layout_constraintVertical_bias="0.057"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="376dp"
                android:layout_height="79dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="370dp"
                    android:layout_height="74dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/gr"
                    android:layout_width="313dp"
                    android:layout_height="41dp"
                    android:layout_alignTop="@+id/image2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image2"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="@+id/image2"
                    app:layout_constraintTop_toTopOf="@+id/image2"
                    app:layout_constraintVertical_bias="0.089"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="376dp"
                android:layout_height="79dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="370dp"
                    android:layout_height="74dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/stan"
                    android:layout_width="313dp"
                    android:layout_height="41dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image5"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="@+id/image5"
                    app:layout_constraintTop_toTopOf="@+id/image5"
                    app:layout_constraintVertical_bias="0.089"
                    tools:ignore="MissingConstraints" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="370dp"
                    android:layout_height="74dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:layout_alignEnd="@+id/image8"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="19dp"
                    android:gravity="right"
                    android:text="الكلمات المفتاحيه"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/image8"
                    app:layout_constraintVertical_bias="0.057"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/stt"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="45dp"
                    android:ems="10"
                    android:textAlignment="textEnd"
                    android:text=""
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/image8"
                    app:layout_constraintVertical_bias="0.057"
                    tools:ignore="MissingConstraints" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/reject"
                    android:layout_width="145dp"
                    android:layout_height="93dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/accept"
                    android:layout_marginStart="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cancel" />

                <ImageButton
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/reject"
                    android:background="@android:color/transparent"
                    android:src="@drawable/accept" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/Navigation"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:background="#acd680"
        android:paddingLeft="150dp"
        android:paddingRight="5dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        design:menu="@menu/bottom_bar">


    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>