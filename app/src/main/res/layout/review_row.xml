<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/background_review"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >

        <TextView
            android:id="@+id/writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="writer name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="review goes here" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corners_review">


            <TextView
                android:id="@+id/numLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView14"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/imageView14"
                android:text="like" />

            <TextView
                android:id="@+id/numDisLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/numLike"
                android:layout_alignBottom="@+id/numLike"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:text="dis" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/numLike"
                android:layout_alignBottom="@+id/numLike"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:background="@drawable/ic_delete_sweep_white_24dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="9dp"
                android:layout_toStartOf="@+id/numDisLike"
                app:srcCompat="@drawable/thumb_down" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/imageView12"
                android:layout_marginEnd="11dp"
                android:layout_toStartOf="@+id/imageView12"
                app:srcCompat="@drawable/thumb_up" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
