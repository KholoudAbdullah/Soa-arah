<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"

    android:background="@color/white"
    tools:context="com.soa_arah.home_page_IT_admin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="350dp"
                    android:layout_height="74dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="231dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@+id/image1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image1"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/image1"
                    app:layout_constraintTop_toTopOf="@+id/image1"
                    tools:ignore="MissingConstraints" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="258dp"
                android:layout_height="133dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:contentDescription="imagefood"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/image1"
                app:srcCompat="@drawable/soaarah_icon" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="350dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="246dp"
                    android:layout_height="41dp"
                    android:layout_alignBottom="@+id/image2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="232dp"
                    android:gravity="center"
                    android:text="جدول العناصر الغذائية"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image2"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/image2"
                    app:layout_constraintTop_toTopOf="@+id/image2"
                    tools:ignore="MissingConstraints" />

            </RelativeLayout>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageTable"
                    android:layout_width="300dp"
                    android:layout_height="149dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="imageTable"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/soaarah_icon"
                    tools:ignore="MissingConstraints" />


            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="350dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:srcCompat="@drawable/account"
                    tools:ignore="MissingConstraints" />


                <EditText
                    android:id="@+id/keyword"
                    android:layout_width="212dp"
                    android:layout_height="43dp"
                    android:layout_alignBottom="@+id/image3"
                    android:layout_alignEnd="@+id/image3"
                    android:layout_marginBottom="13dp"
                    android:layout_marginEnd="59dp"
                    android:gravity="center"
                    android:hint="الكلمات المفتاحية"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/image3"
                    app:layout_constraintHorizontal_bias="0.702"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/image3"
                    app:layout_constraintTop_toTopOf="@+id/image3"
                    app:layout_constraintVertical_bias="0.978"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="350dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="lable"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/account"
                    tools:ignore="MissingConstraints" />


                <EditText
                    android:id="@+id/calories1"
                    android:layout_width="212dp"
                    android:layout_height="43dp"
                    android:layout_alignBottom="@+id/image4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:hint="السعرات الحرارية"
                    android:textSize="19sp"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/reject"
                    android:layout_width="145dp"
                    android:layout_height="93dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/accept"
                    android:layout_marginStart="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cancel" />

                <ImageButton
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/reject"
                    android:background="@android:color/transparent"
                    android:src="@drawable/accept" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/Navigation"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-10dp"
        android:background="#acd680"
        android:paddingLeft="150dp"
        android:paddingRight="5dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        design:menu="@menu/bottom_bar_admin">


    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>

