<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.soa_arah.home_page_register"
    >


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/Navigation"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-10dp"
        android:background="#acd680"
        android:paddingLeft="150dp"
        android:paddingRight="5dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        design:menu="@menu/bottom_bar">


    </android.support.design.widget.BottomNavigationView>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="300dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="false"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/account_icon" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/round_corner1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="200dp"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="الوزن بالكجم" />

                <EditText
                    android:id="@+id/wight"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image3"
                    android:layout_marginStart="22dp"
                    android:layout_toEndOf="@+id/edit_wight"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    />

                <ImageButton
                    android:id="@+id/edit_wight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FF"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    app:srcCompat="@drawable/edit_icon" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_alignTop="@+id/textView16"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_corner1"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="200dp"
                    android:text="الطول بالسم"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/textView16" />

                <EditText
                    android:id="@+id/hight"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/edit_hight"
                    android:layout_marginStart="17dp"
                    android:layout_toEndOf="@+id/edit_hight"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd" />

                <ImageButton
                    android:id="@+id/edit_hight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FF"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/edit_icon" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/round_corner1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/edit_date"
                    android:layout_alignStart="@+id/image5"
                    android:paddingLeft="200dp"
                    android:text="تاريخ الميلاد"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="105dp"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/edit_date"
                    android:gravity="right"
                    android:hint="اختر التاريخ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageButton
                    android:id="@+id/edit_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FF"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    app:srcCompat="@drawable/edit_icon" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">



                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/round_corner1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="200dp"
                    android:text="الجنس"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/textView3" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />

                <Spinner
                    android:id="@+id/gen"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.58"
                    android:hint="الجنس"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintHorizontal_bias="0.577"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageButton
                    android:id="@+id/edit_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FF"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    app:srcCompat="@drawable/edit_icon" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/round_corner1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="165dp"
                    android:textSize="18sp"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:text="محيط الخصر بالسم" />

                <EditText
                    android:id="@+id/waist"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image7"
                    android:layout_toEndOf="@+id/edit_waist"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd" />

                <ImageButton
                    android:id="@+id/edit_waist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FF"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    app:srcCompat="@drawable/edit_icon" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/round_corner1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="165dp"
                    android:textColor="#8BAF3A"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text=" محيط الفخذ بالسم"
                    android:id="@+id/textView22" />

                <EditText
                    android:id="@+id/hip"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image8"
                    android:layout_toEndOf="@+id/edit_hip"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd" />

                <ImageButton
                    android:id="@+id/edit_hip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00FF"
                    android:paddingLeft="25dp"
                    android:paddingTop="25dp"
                    app:srcCompat="@drawable/edit_icon" />
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/delete"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

</android.support.constraint.ConstraintLayout>